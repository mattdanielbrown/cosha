  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "eslint": "^7.1.0",
    "eslint-config-sweet": "^0.6.1",
    "robins-rollup-plugin-eslint": "^0.1.0",
    "rollup": "^2.11.2",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^6.1.0"
  },
  "files": [
    "dist/cosha.*"
  ],
  "keywords": [
    "browser",
    "image",
    "shadow",
    "colors",
    "html",
    "css filters",
    "dom"
  ],
  "scripts": {
    "clean": "rm -rf dist/cosha.*",
    "build": "rollup -c",
    "watch": "yarn build -w",
    "start": "yarn clean && yarn watch --environment development",
    "prod": "yarn clean && yarn watch",
    "release": "yarn clean && yarn build && yarn publish && open dist"
  },
  "eslintConfig": {
    "extends": "sweet/web",
