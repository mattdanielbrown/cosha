  "description": "Colorful shadows for your images",
  "homepage": "https://npm.robinloeffel.ch/cosha",
  "repository": "robinloeffel/cosha",
  "main": "dist/cosha.cjs.js",
  "module": "dist/cosha.esm.js",
  "unpkg": "dist/cosha.iife.js",
  "author": {
    "name": "Robin LÃ¶ffel",
